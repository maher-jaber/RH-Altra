# Auto-generated defaults for local prod-compose runs
APP_ENV=prod
APP_DEBUG=0
APP_SECRET=<CHANGE_ME>

DATABASE_URL=mysql://rh_user:rh_pass@db:3306/rh_altra?serverVersion=8.0

# CORS
CORS_ALLOW_ORIGIN=*

# Mailer (optional)
# Examples:
#   SMTP + STARTTLS: smtp://user:pass@smtp.example.com:587?encryption=tls
#   SMTPS (implicit TLS): smtps://user:pass@smtp.example.com:465
MAILER_DSN=null://null
MAIL_FROM=hr@altracall.com
MAIL_FROM_NAME="ALTRA HRMS"
FRONTEND_URL=http://localhost:8008

# Mercure (optional but required by container env)
MERCURE_PUBLIC_URL=http://localhost:8008/.well-known/mercure
MERCURE_JWT_SECRET=<CHANGE_ME>

# MySQL
MYSQL_ROOT_PASSWORD=rootpass
MYSQL_DATABASE=rh_altra
MYSQL_USER=rh_user
MYSQL_PASSWORD=rh_pass
